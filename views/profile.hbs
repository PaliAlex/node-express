<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        <img
            class="avatar"
            src="https://kino-teatr.ua/public/main/persons/2021-07/x4_photo_6103bcc8d4dc6.jpg"
            alt=""
        >
        <p>No Avatar</p>
    </div>
    <div class="col s6">
        <form action="/profile" method="POST">
            <p>Your email <strong>{{user.email}}</strong></p>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="title">Your Name</label>
                <span class="helper-text" data-error="Can not be empty"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn " type="submit">Change</button>
        </form>
    </div>
</div>
