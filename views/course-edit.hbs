<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Add name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate"  value="{{course.price}}" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Add price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" value="{{course.image}}" required>
        <label for="img">URL of picture</label>
        <span class="helper-text" data-error="Add url of picture"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary" type="submit">Edit course</button>
</form>
